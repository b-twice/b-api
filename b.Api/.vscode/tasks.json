{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/b.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/b.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/b.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        // {
        //     "label": "build",
        //     "type": "shell",
        //     "command": "./scripts/build_local.sh",
        //     "windows": {
        //         "command": "dotnet build"
        //     },
        //     "osx": {
        //         "command": "dotnet build"
        //     },
        //     "problemMatcher": []
        // },
        {
            "label": "generate",
            "type": "shell",
            // NOTE - Sed command is to address:https://github.com/dotnet/efcore/issues/11961
            // For my purposes, all tables have autoincrement PK. Slated for 5.0
            "command": "dotnet ef dbcontext scaffold \"DataSource=./data/app.db;\" Microsoft.EntityFrameworkCore.Sqlite -o Models -v -c AppDbContext --force;sed -i '' 's/ValueGeneratedNever/ValueGeneratedOnAdd/g' Models/AppDbContext.cs",
            "problemMatcher": []
        }
    ]
}