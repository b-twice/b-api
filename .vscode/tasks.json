{
    "version": "2.0.0",
    "runner": "terminal",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./scripts/build_local.sh",
            "windows": {
                "command": "dotnet build"
            },
            "osx": {
                "command": "dotnet build"
            },
            "problemMatcher": []
        },
        {
            "label": "generate",
            "type": "shell",
            "command": "dotnet ef dbcontext scaffold \"DataSource=app.db;\" Microsoft.EntityFrameworkCore.Sqlite -o api/models -v -c ApiDbContext --force",
            "problemMatcher": []
        }
    ]
}