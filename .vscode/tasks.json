{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/B.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/B.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/B.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "./scripts/build_local.sh",
            "windows": {
                "command": "dotnet build"
            },
            "osx": {
                "command": "dotnet build"
            },
            "problemMatcher": []
        },
        {
            "label": "generate",
            "type": "shell",
            "command": "dotnet ef dbcontext scaffold \"DataSource=app.db;\" Microsoft.EntityFrameworkCore.Sqlite -o Models -v -c ApiDbContext --force",
            "problemMatcher": []
        }
    ]
}